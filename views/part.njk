{% extends "layout.njk" %}
{% block content %}
<main class="container">
  {% if part %}
  <div>
    {% if part.image %}
    <img src="/img/{{part.image}}" alt="{{part.name}}">
    {% endif %}
    <h2>{{part.name}}</h2>
    <p>{{part.text}}</p>
    <ul class="options">
      {% for option in part.options %}
      <li><a class="button" href="/story/{{option.target}}">{{option.text}}</a></li>
      {% endfor %}
    </ul>
  </div>
  {% else %}
  <p>There is no part to display</p>
  {% endif %}
</main>
{% endblock %}